                                <button type="button">♡ <%= trend.likes%> </button> 
                            </div>
                            <img src="images/cakes/<%=trend.img%>" alt="">
                        </div>
                        <h2><%=trend.name%></h2>
                        <small class="text-body-secondary">P<%=trend.price%>.00</small> 
                        <button type="submit" form="trend-button-<%=trend.id%>" class="order-btn ">Order</button>
                    </div>
                <%})}%>
            </div>
    </section>

    <section id="album" class="f-container">


    <div class="album py-5 bg-body-tertiary">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                <% if(locals.items && items.length > 0) { items.forEach(item => { %>

                <form class="hidden" action="/order" method="POST" id="gallery-button-<%=item.id%>"></form>
                <input class="hidden" form="gallery-button-<%=item.id%>" type="hidden" value="<%=item.id%>" name="cake_id">

                <div class="col">
                    <div class="card shadow-sm">
                        <img aria-label="Placeholder: Thumbnail" class="bd-placeholder-img card-img-top px-5" height="300" preserveAspectRatio="xMidYMid slice" role="img" width="100%" xmlns="cake.png" src="images/cakes/<%=item.img%>">
                            <title>Placeholder</title>
                            <rect width="100%" height="100%" fill="#55595c"></rect>
                            <text x="50%" y="50%" fill="#eceeef" dy=".3em" class="mt-3 ms-3" id="#food-title"><%=item.name%></text>
                        </img>
                        <div class="card-body">
                            <!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->
                            <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group"> 
                                <button type="submit" form="gallery-button-<%=item.id%>" class="btn btn-sm btn-outline-secondary order-btn ">Order</button> 
                                <button type="button" class="btn btn-sm btn-outline-secondary flex-center like-btn"><span id="like-emoji">♡</span> <%= item.likes%> </button> 
                            </div>
                                <small class="text-body-secondary">P<%=item.price%>.00</small> 
                            </div>
                        </div>
                    </div>
                </div>

                <% })}; %>

            </div>
        </div>
    </div>

    </section>


